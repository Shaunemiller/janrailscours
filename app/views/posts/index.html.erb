<h1>Posts#index</h1>

<section class="posts">

	<h1> Posts </h1>
	
	<% @posts.each do |post| %> 

		<div class="post">

			<%=link_to post_path(post) do %>		
				<h2> <%= post.title %> </h2>

				<% end %>
			<p> <%= post.body %></p>
			<small>Posted <%= time_ago_in_words (post.created_at)%> ago </small>


			<p> 
				<%= link_to "Edit", edit_post_path(post)%>
			</p>

		</div>


	<% end %>

	</Section>

	<section>

	<p>
	<%= link_to "New Post", new_post_path %>
	</p>

</section>